<section class="products-show">
<%     @current_user ||= User.find(session[:user_id]) if session[:user_id] %>
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
      <h3>Write a Review!</h3>
      <%=form_for([@product, @rating]) do |form| %>
        <p>
        <% form%>
        <%= form.label :rating %>
        <%= form.select :rating, options_for_select([1,2,3,4,5]) %>
          
        </p>
        <p>
        <%= form.label :description %>
        <%= form.text_area :description %>
        </p>
        <p><%= form.submit %> </p>
        <% end %>
      <h3>Reviews and Ratings: </h3>
      <% Rating.where(product_id:@product).order(created_at: :desc).each do |item| %>
        <p>User: <%= User.find(item.user_id).first_name %> <%= User.find(item.user_id).last_name %></p>
        <p>Rating: <%= item.rating %></p>
        <p>Description: <%= item.description %></p>
        <p>Review created at: <%= item.created_at %></p>
        <% if @current_user.id==item.user_id %>
          <%= link_to fa_icon('trash'), [@product, @rating], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
    </div>

  </article>

</section>
